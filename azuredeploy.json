{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "tenantName": {
            "type": "string",
            "defaultValue": "barbaz"
        },
        "DeployJumpHost": {
            "type": "string",
            "defaultValue": "enabled",
            "allowedValues": [
                "enabled",
                "disabled"
            ]
        },
        "virtualMachines_Jumphost01_name": {
            "defaultValue": "Jumphost01",
            "type": "string"
        },
        "Jump_Host_Network_Interface_Name": {
            "defaultValue": "jumphost01497",
            "type": "string"
        },
        "Dev_Environment_NSG_Name": {
            "defaultValue": "Dev-NSG",
            "type": "string"
        },
        "Integration_Environment_NSG_Name": {
            "defaultValue": "Integration-NSG",
            "type": "string"
        },
        "Prod_Environment_NSG_Name": {
            "defaultValue": "Prod-NSG",
            "type": "string"
        },
        "GW_Public_IP_Address_Name": {
            "defaultValue": "Haufe-AGW-PIP",
            "type": "string"
        },
        "publicIPAddresses_Jumphost01_ip_name": {
            "defaultValue": "Jumphost01-PIP",
            "type": "string"
        },
        "virtualNetworks_HRS_vnet_name": {
            "defaultValue": "Project-vNet",
            "type": "string"
        }
    },
    "variables": {
        "commonSettings": {
            "tenantName": "[parameters('tenantName')]",
            "parameters": {
                "DeployJumpHost": "[parameters('DeployJumpHost')]",
                "virtualMachines_Jumphost01_name": "[parameters('virtualMachines_Jumphost01_name')]",
                "Jump_Host_Network_Interface_Name": "[parameters('Jump_Host_Network_Interface_Name')]",
                "Dev_Environment_NSG_Name": "[parameters('Dev_Environment_NSG_Name')]",
                "Integration_Environment_NSG_Name": "[parameters('Integration_Environment_NSG_Name')]",
                "Prod_Environment_NSG_Name": "[parameters('Prod_Environment_NSG_Name')]",
                "GW_Public_IP_Address_Name": "[parameters('GW_Public_IP_Address_Name')]",
                "publicIPAddresses_Jumphost01_ip_name": "[parameters('publicIPAddresses_Jumphost01_ip_name')]",
                "virtualNetworks_HRS_vnet_name": "[parameters('virtualNetworks_HRS_vnet_name')]"
            },
            "constants": {
                "apiVersions": {
                    "networkSecurityGroups": "2016-03-30",
                    "loadBalancers": "2016-03-30",
                    "virtualNetworks": "2016-03-30",
                    "publicIPAddresses": "2016-03-30",
                    "networkInterfaces": "2016-03-30",

                    "storageAccounts": "2015-06-15",

                    "virtualMachines": "2016-04-30-preview",
                    "virtualMachineScaleSets": "2015-06-15",
                    "deployments": "2015-01-01"
                }
            },
            "vm": {
                "jumphost": {
                    "publisher": "MicrosoftWindowsServer",
                    "offer": "WindowsServer",
                    "sku": "2016-Datacenter",
                    "version": "latest",
                    "instanceSize": "Standard_DS1_v2"
                }
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[concat('publicip-gw-', variables('commonSettings').tenantName)]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.publicIPAddresses]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[concat('publicip-jumphost-', variables('commonSettings').tenantName)]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.publicIPAddresses]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat('nic-jumphost-', variables('commonSettings').tenantName)]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.networkInterfaces]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', concat('vnet-', variables('commonSettings').tenantName))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', concat('publicip-jumphost-', variables('commonSettings').tenantName)]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAddress": "172.21.7.4",
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIPAddresses_Jumphost01_ip_name'))]"
                            },
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_HRS_vnet_name')), '/subnets/JumpNet')]"
                            }
                        }
                    }
                ],
                "enableIPForwarding": false
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat('vm-jumphost-', variables('commonSettings').tenantName)]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.virtualMachines]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat('nic-jumphost-', variables('commonSettings').tenantName))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('commonSettings').vm.jumphost.instanceSize]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('commonSettings').vm.jumphost.publisher]",
                        "offer": "[variables('commonSettings').vm.jumphost.offer]",
                        "sku": "[variables('commonSettings').vm.jumphost.sku]",
                        "version": "[variables('commonSettings').vm.jumphost.version]"
                    },
                    "osDisk": {
                        "osType": "Windows",
                        "name": "[parameters('virtualMachines_Jumphost01_name')]",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat('https://esmaeildevdisks403.blob.core.windows.net/vhds/', parameters('virtualMachines_Jumphost01_name'),'20170330094948.vhd')]"
                        },
                        "caching": "ReadWrite"
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[parameters('virtualMachines_Jumphost01_name')]",
                    "adminUsername": "esmaeil",
                    "windowsConfiguration": {
                        "provisionVMAgent": true,
                        "enableAutomaticUpdates": true
                    },
                    "secrets": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaces_jumphost01497_name'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "https://esmaeildevdiag370.blob.core.windows.net/"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('networkSecurityGroups_Dev_NSG_name')]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.networkSecurityGroups]",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "Block-Inbound-Integration",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "172.21.1.0/24",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "Block-Inbound-Prod",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "172.21.0.0/24",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "Block-Outbound-Integration",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "172.21.1.0/24",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "Block-Outbound-Prod",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "172.21.0.0/24",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Outbound"
                        }
                    }
                ]
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('networkSecurityGroups_Integration_NSG_name')]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.networkSecurityGroups]",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "Block-Inbound-Dev",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "172.21.2.0/24",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "Block-Inbound-Prod",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "172.21.0.0/24",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "Block-Outbound-Dev",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "172.21.2.0/24",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "Block-Outbound-Prod",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "172.21.0.0/24",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Outbound"
                        }
                    }
                ]
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('networkSecurityGroups_Prod_NSG_name')]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.networkSecurityGroups]",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "Block-Inbound-Dev",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "172.21.2.0/24",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "Block-Inbound-Integration",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "172.21.1.0/24",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "Block-Outbound-Dev",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "172.21.2.0/24",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "Block-Outbound-Integration",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "172.21.1.0/24",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Outbound"
                        }
                    }
                ]
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[concat('vnet-', variables('commonSettings').tenantName)]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.virtualNetworks]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups_Prod_NSG_name'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups_Integration_NSG_name'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups_Dev_NSG_name'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "172.21.0.0/21"
                    ]
                },
                "subnets": [
                    {
                        "name": "Prod-1",
                        "properties": {
                            "addressPrefix": "172.21.0.0/25",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups_Prod_NSG_name'))]"
                            }
                        }
                    },
                    {
                        "name": "Prod-2",
                        "properties": {
                            "addressPrefix": "172.21.0.128/25",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups_Prod_NSG_name'))]"
                            }
                        }
                    },
                    {
                        "name": "Integration-1",
                        "properties": {
                            "addressPrefix": "172.21.1.0/25",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups_Integration_NSG_name'))]"
                            }
                        }
                    },
                    {
                        "name": "Integration-2",
                        "properties": {
                            "addressPrefix": "172.21.1.128/25",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups_Integration_NSG_name'))]"
                            }
                        }
                    },
                    {
                        "name": "Dev-1",
                        "properties": {
                            "addressPrefix": "172.21.2.0/25",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups_Dev_NSG_name'))]"
                            }
                        }
                    },
                    {
                        "name": "Dev-2",
                        "properties": {
                            "addressPrefix": "172.21.2.128/25",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups_Dev_NSG_name'))]"
                            }
                        }
                    },
                    {
                        "name": "Build-1",
                        "properties": {
                            "addressPrefix": "172.21.3.0/25"
                        }
                    },
                    {
                        "name": "Build-2",
                        "properties": {
                            "addressPrefix": "172.21.3.128/25"
                        }
                    },
                    {
                        "name": "GatewaySubnet",
                        "properties": {
                            "addressPrefix": "172.21.7.240/29"
                        }
                    },
                    {
                        "name": "JumpNet",
                        "properties": {
                            "addressPrefix": "172.21.7.0/26"
                        }
                    }
                ]
            }
        }
    ]
}
