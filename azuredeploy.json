{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "tenantName": {
            "type": "string",
            "defaultValue": "barbaz"
        },
        "DeployJumpHost": {
            "type": "string",
            "defaultValue": "enabled",
            "allowedValues": [
                "enabled",
                "disabled"
            ]
        }
    },
    "variables": {
        "commonSettings": {
            "tenantName": "[parameters('tenantName')]",
            "parameters": {
                "DeployJumpHost": "[parameters('DeployJumpHost')]"
            },
            "constants": {
                "apiVersions": {
                    "networkSecurityGroups": "2016-03-30",
                    "loadBalancers": "2016-03-30",
                    "virtualNetworks": "2016-03-30",
                    "publicIPAddresses": "2016-03-30",
                    "networkInterfaces": "2016-03-30",

                    "storageAccounts": "2015-06-15",

                    "virtualMachines": "2016-04-30-preview",
                    "virtualMachineScaleSets": "2015-06-15",
                    "deployments": "2015-01-01"
                }
            },
            "vm": {
                "jumphost": {
                    "publisher": "MicrosoftWindowsServer",
                    "offer": "WindowsServer",
                    "sku": "2016-Datacenter",
                    "version": "latest",
                    "instanceSize": "Standard_DS1_v2"
                }
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[concat('publicip-gw-', variables('commonSettings').tenantName)]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.publicIPAddresses]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[concat('publicip-jumphost-', variables('commonSettings').tenantName)]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.publicIPAddresses]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat('nic-jumphost-', variables('commonSettings').tenantName)]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.networkInterfaces]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', concat('vnet-', variables('commonSettings').tenantName))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', concat('publicip-jumphost-', variables('commonSettings').tenantName)]"
            ],
            "properties": {
                "enableIPForwarding": false,
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAddress": "172.21.7.4",
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat('publicip-jumphost-', variables('commonSettings').tenantName))]"
                            },
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', concat('vnet-', variables('commonSettings').tenantName)), '/subnets/JumpNet')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[concat('nsg-dev-', variables('commonSettings').tenantName)]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.networkSecurityGroups]",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "Block-Inbound-Integration",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "172.21.1.0/24",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "Block-Inbound-Prod",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "172.21.0.0/24",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "Block-Outbound-Integration",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "172.21.1.0/24",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "Block-Outbound-Prod",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "172.21.0.0/24",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Outbound"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[concat('nsg-integration-', variables('commonSettings').tenantName)]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.networkSecurityGroups]",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "Block-Inbound-Dev",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "172.21.2.0/24",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "Block-Inbound-Prod",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "172.21.0.0/24",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "Block-Outbound-Dev",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "172.21.2.0/24",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "Block-Outbound-Prod",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "172.21.0.0/24",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Outbound"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[concat('nsg-prod-', variables('commonSettings').tenantName)]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.networkSecurityGroups]",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "Block-Inbound-Dev",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "172.21.2.0/24",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "Block-Inbound-Integration",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "172.21.1.0/24",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "Block-Outbound-Dev",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "172.21.2.0/24",
                            "access": "Deny",
                            "priority": 100,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "Block-Outbound-Integration",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "172.21.1.0/24",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Outbound"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[concat('vnet-', variables('commonSettings').tenantName)]",
            "apiVersion": "[variables('commonSettings').constants.apiVersions.virtualNetworks]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', concat('nsg-dev-', variables('commonSettings').tenantName))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', concat('nsg-integration-', variables('commonSettings').tenantName))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', concat('nsg-prod-', variables('commonSettings').tenantName))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "172.21.0.0/21"
                    ]
                },
                "subnets": [
                    {
                        "name": "Prod-1",
                        "properties": {
                            "addressPrefix": "172.21.0.0/25",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat('nsg-prod-', variables('commonSettings').tenantName))]"
                            }
                        }
                    },
                    {
                        "name": "Prod-2",
                        "properties": {
                            "addressPrefix": "172.21.0.128/25",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat('nsg-prod-', variables('commonSettings').tenantName))]"
                            }
                        }
                    },
                    {
                        "name": "Integration-1",
                        "properties": {
                            "addressPrefix": "172.21.1.0/25",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat('nsg-integration-', variables('commonSettings').tenantName))]"
                            }
                        }
                    },
                    {
                        "name": "Integration-2",
                        "properties": {
                            "addressPrefix": "172.21.1.128/25",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat('nsg-integration-', variables('commonSettings').tenantName))]"
                            }
                        }
                    },
                    {
                        "name": "Dev-1",
                        "properties": {
                            "addressPrefix": "172.21.2.0/25",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat('nsg-dev-', variables('commonSettings').tenantName))]"
                            }
                        }
                    },
                    {
                        "name": "Dev-2",
                        "properties": {
                            "addressPrefix": "172.21.2.128/25",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat('nsg-dev-', variables('commonSettings').tenantName))]"
                            }
                        }
                    },
                    {
                        "name": "Build-1",
                        "properties": {
                            "addressPrefix": "172.21.3.0/25"
                        }
                    },
                    {
                        "name": "Build-2",
                        "properties": {
                            "addressPrefix": "172.21.3.128/25"
                        }
                    },
                    {
                        "name": "GatewaySubnet",
                        "properties": {
                            "addressPrefix": "172.21.7.240/29"
                        }
                    },
                    {
                        "name": "JumpNet",
                        "properties": {
                            "addressPrefix": "172.21.7.0/26"
                        }
                    }
                ]
            }
        }
    ]
}